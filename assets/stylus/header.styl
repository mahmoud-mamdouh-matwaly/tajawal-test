/******* start .navbar top *******/
body 
	font-family: 'Open Sans', sans-serif;
h3
	font-size 36px
	font-weight bold
	margin 0
	padding-top 40px
	&:after
		content ''
		display block
		width 180px
		height 8px
		opacity 0.65
		margin-top 8px
.navbar
	margin-bottom 0 !important
	border 0 !important
	background-color rgba(0, 0, 0, 0.8)
	border-radius 0
	min-height 70px
	.navbar-brand
		min-height 70px
		padding 22px 15px
		img
			height 24px
	.nav
		li
			a
				color $white
				line-height 17px 
				font-size 12px
				background-color transparent
				height 70px
				padding 27px 15px
				&:hover
					color $white
		.open
			a
				background-color transparent
				color $white
				&:focus
					background-color transparent
					color $white
			.dropdown-menu
				background-color rgba(0, 0, 0, 0.8)
				border-radius 0
				li
					a
						color $white
						height 45px
						padding 15px 15px
						border 0
						
												
				