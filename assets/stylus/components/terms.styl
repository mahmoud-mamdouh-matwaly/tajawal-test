/******** start terms ********/
.terms
	background-color $white
	&__content
		padding-top 62px
		padding-bottom 40px
		h3
			color $dark
			&:after
				background-color #333333
		ol
			font-size 15px
			list-style none
			padding-top 64px
			padding-bottom 34px
			li
				line-height 24px
				color $gray
				position relative
				padding-left 3%
				margin-bottom 2%
				span
					position absolute
					left -5%
						



/******** end terms ********/